{
  "info": {
    "title": "Mamo Swagger",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1"
    }
  ],
  "paths": {
    "/accounts/transfer": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Transfer money",
        "description": "Transfer money to other verified account",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transfer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Transfer money successfully"
          },
          "403": {
            "description": "Transfer money failure"
          }
        }
      }
    },
    "/accounts/{accountId}/transactions": {
      "get": {
        "tags": [
          "Account"
        ],
        "summary": "Get account's transactions",
        "description": "Returns account's transaction",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "description": "ID of account to return",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get transactions successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Transactions"
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Account not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Transfer": {
        "type": "object",
        "properties": {
          "sender": {
            "type": "string",
            "example": "abc@xyz.com",
            "description": "Sender's information (email or phone number)"
          },
          "receiver": {
            "type": "string",
            "example": "def@xyz.com",
            "description": "Receiver's information (email or phone number)"
          },
          "amount": {
            "type": "float",
            "example": 10
          }
        }
      },
      "Transactions": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Transaction"
        }
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "transaction_type": {
            "type": "string",
            "example": "inbound"
          },
          "amount": {
            "type": "object",
            "properties": {
              "cents": {
                "type": "integer",
                "example": 10
              },
              "currency_iso": {
                "type": "string",
                "example": "USD"
              }
            }
          },
          "account_id": {
            "type": "integer",
            "example": 1
          },
          "created_at": {
            "type": "string",
            "format": "datetime",
            "example": "2022-09-06T05:06:02.066Z"
          }
        }
      }
    }
  }
}
